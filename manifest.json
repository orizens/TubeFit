{
  "name" : "YouTube AutoFit",
  "version" : "1.0",
  "description" : "Autofits youtube videos to the browser's size, scrolls into view, keeps the page and its functionality. Works with playlists.",
  "background_page" : "background.html",
  "page_action" :
  {
    "default_icon" : "youtube-16.png",
    "default_title" : "enable-disable youtube autofit"
  },
  "permissions": [
	"tabs"
  ],
  "content_scripts" : [
    {
      "matches" : [
        "http://youtube.com/*",
        "http://www.youtube.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
	"16": "youtube-16.png",
    "48" : "youtube-48.png",
    "128" : "youtube-128.png"
  }
}
